<Window x:Class="WoldVirtual3DViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WoldVirtual3D Viewer" Width="1024" Height="768" WindowStartupLocation="CenterScreen">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="#2C2C2C">
            <Menu Background="Transparent" VerticalAlignment="Center" Margin="12,0">
                <MenuItem Header="WoldVirtual3D Viewer" Foreground="White" FontSize="14" FontWeight="Bold"/>
                <MenuItem Header="Preferencias" Foreground="White">
                    <MenuItem Header="Seleccionar Motor" Command="{Binding SelectEngineCommand}"/>
                </MenuItem>
            </Menu>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="12,0">
                <TextBlock Text="WVC Coin: " Foreground="#AAAAAA" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding WVCCoinBalance}" Foreground="#FFD700" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
        </DockPanel>
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
        <DockPanel Grid.Row="2" Background="#2C2C2C">
            <TextBlock Text="{Binding StatusText}" Foreground="White" VerticalAlignment="Center" Margin="12,0"/>
        </DockPanel>
    </Grid>
    </Window>
