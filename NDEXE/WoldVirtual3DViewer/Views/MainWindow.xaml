<Window x:Class="WoldVirtual3DViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WoldVirtual3D Viewer" Width="1024" Height="768" WindowStartupLocation="CenterScreen">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="#2C2C2C">
            <TextBlock Text="WoldVirtual3D Viewer" Foreground="White" VerticalAlignment="Center" Margin="12,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Seleccionar Motor" Margin="8,4" Padding="8,0" Command="{Binding SelectEngineCommand}"/>
            </StackPanel>
        </DockPanel>
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
        <DockPanel Grid.Row="2" Background="#2C2C2C">
            <TextBlock Text="{Binding StatusText}" Foreground="White" VerticalAlignment="Center" Margin="12,0"/>
        </DockPanel>
    </Grid>
    </Window>
