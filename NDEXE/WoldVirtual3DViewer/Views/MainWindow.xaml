<Window x:Class="WoldVirtual3DViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoldVirtual3DViewer.Views"
        xmlns:vm="clr-namespace:WoldVirtual3DViewer.ViewModels"
        mc:Ignorable="d"
        Title="WoldVirtual3D Viewer - Metaverso Descentralizado"
        Height="700"
        Width="900"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- DataTemplates para las diferentes vistas -->
        <DataTemplate DataType="{x:Type vm:PCRegistrationViewModel}">
            <local:PCRegistrationView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AvatarSelectionViewModel}">
            <local:AvatarSelectionView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UserRegistrationViewModel}">
            <local:UserRegistrationView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <local:LoginView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <!-- Header con logo y título -->
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D3748" BorderBrush="#FF4A5568" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <!-- Logo placeholder -->
                <Border Grid.Column="0" Background="#FF63B3ED" CornerRadius="40" Margin="15">
                    <TextBlock Text="WV3D"
                             FontSize="16"
                             FontWeight="Bold"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Border>

                <!-- Título -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="WoldVirtual3D Viewer"
                             FontSize="20"
                             FontWeight="Bold"
                             Foreground="White"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Metaverso Descentralizado"
                             FontSize="12"
                             Foreground="#FFCBD5E0"
                             HorizontalAlignment="Center"
                             Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Espacio para futuras opciones -->
                <Grid Grid.Column="2"/>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Border Grid.Row="1" Background="#FF1A202C">
            <ContentControl Content="{Binding CurrentView}"
                          Margin="20"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF2D3748" BorderBrush="#FF4A5568" BorderThickness="0,1,0,0">
            <TextBlock Text="© 2025 WoldVirtual3D - Metaverso Descentralizado"
                     FontSize="10"
                     Foreground="#FFCBD5E0"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
