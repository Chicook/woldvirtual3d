<UserControl x:Class="WoldVirtual3DViewer.Views.UserRegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <Label Content="Registro de Usuario"
                   Style="{StaticResource TitleLabelStyle}"
                   Grid.Row="0"
                   Margin="0,0,0,30"/>

            <!-- Información del avatar seleccionado -->
            <Border Grid.Row="1"
                    Background="#FF2D3748"
                    BorderBrush="#FF4A5568"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,0,20"
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar seleccionado -->
                    <Border Grid.Column="0"
                            Background="#FF63B3ED"
                            CornerRadius="35"
                            Width="70"
                            Height="70">
                        <TextBlock Text="{Binding SelectedAvatar.Type, StringFormat={}{0}}"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>

                    <!-- Información -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock Text="{Binding SelectedAvatar.Name, StringFormat='Avatar Seleccionado: {0}'}"
                                 Foreground="White"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedAvatar.Description}"
                                 Foreground="#FFCBD5E0"
                                 FontSize="12"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Formulario de registro -->
            <Border Grid.Row="2"
                    Background="#FF1A202C"
                    BorderBrush="#FF4A5568"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Crear Cuenta de Usuario"
                           Style="{StaticResource ModernLabelStyle}"
                           FontSize="16"
                           FontWeight="Bold"
                           Grid.Row="0"
                           Margin="0,0,0,20"/>

                    <!-- Campo Usuario -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <Label Content="Nombre de Usuario:"
                               Style="{StaticResource ModernLabelStyle}"
                               Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource ModernTextBoxStyle}"
                                Width="300"
                                HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Campo Contraseña -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <Label Content="Contraseña:"
                               Style="{StaticResource ModernLabelStyle}"
                               Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                    Style="{StaticResource ModernPasswordBoxStyle}"
                                    Width="300"
                                    HorizontalAlignment="Left"
                                    PasswordChanged="PasswordBox_PasswordChanged"/>
                    </StackPanel>

                    <!-- Campo Confirmar Contraseña -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,15">
                        <Label Content="Confirmar Contraseña:"
                               Style="{StaticResource ModernLabelStyle}"
                               Margin="0,0,0,5"/>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                    Style="{StaticResource ModernPasswordBoxStyle}"
                                    Width="300"
                                    HorizontalAlignment="Left"
                                    PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                    </StackPanel>

                    <!-- Estado del registro -->
                    <TextBlock Grid.Row="4"
                             Text="{Binding UserRegistrationStatus}"
                             Foreground="{Binding IsUserRegistered, Converter={StaticResource BoolToColorConverter}}"
                             FontSize="14"
                             FontWeight="Medium"
                             TextWrapping="Wrap"
                             Margin="0,10,0,20"/>

                    <!-- Botones -->
                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Button Content="Registrar Usuario"
                                Style="{StaticResource ModernButtonStyle}"
                                Command="{Binding RegisterUserCommand}"
                                Width="180"
                                Margin="0,0,10,0"
                                Background="#FF48BB78"
                                IsEnabled="{Binding IsUserRegistered, Converter={StaticResource InverseBoolConverter}}"/>

                        <Button Content="Descargar Hash"
                                Style="{StaticResource ModernButtonStyle}"
                                Command="{Binding DownloadUserHashCommand}"
                                Width="180"
                                Background="#FF3182CE"
                                IsEnabled="{Binding IsUserRegistered}"/>
                    </StackPanel>

                    <!-- Información adicional -->
                    <Border Grid.Row="6"
                            Background="#FF2D3748"
                            BorderBrush="#FF4A5568"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="Requisitos de la contraseña:"
                                     Foreground="#FFCBD5E0"
                                     FontSize="13"
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>

                            <BulletDecorator Margin="15,0,0,5">
                                <BulletDecorator.Bullet>
                                    <Ellipse Fill="#FF48BB78" Width="6" Height="6"/>
                                </BulletDecorator.Bullet>
                                <TextBlock Text="Mínimo 6 caracteres"
                                         Foreground="#FFCBD5E0"
                                         FontSize="12"/>
                            </BulletDecorator>

                            <BulletDecorator Margin="15,0,0,5">
                                <BulletDecorator.Bullet>
                                    <Ellipse Fill="#FF48BB78" Width="6" Height="6"/>
                                </BulletDecorator.Bullet>
                                <TextBlock Text="Las contraseñas deben coincidir"
                                         Foreground="#FFCBD5E0"
                                         FontSize="12"/>
                            </BulletDecorator>

                            <TextBlock Text="⚠️ IMPORTANTE: Después de registrar su usuario, descargue el hash de su cuenta y guárdelo en un lugar seguro junto con el hash de su PC."
                                     Foreground="#FFF6AD55"
                                     FontSize="11"
                                     FontWeight="Medium"
                                     TextWrapping="Wrap"
                                     Margin="0,15,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
