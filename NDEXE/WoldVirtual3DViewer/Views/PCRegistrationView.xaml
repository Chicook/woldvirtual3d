<UserControl x:Class="WoldVirtual3DViewer.Views.PCRegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <Label Content="Registro de PC"
                   Style="{StaticResource TitleLabelStyle}"
                   Grid.Row="0"
                   Margin="0,0,0,30"/>

            <!-- Información del PC -->
            <Border Grid.Row="1"
                    Background="#FF2D3748"
                    BorderBrush="#FF4A5568"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,0,20"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Información del Sistema"
                           Style="{StaticResource ModernLabelStyle}"
                           FontSize="16"
                           FontWeight="Bold"
                           Grid.Row="0"
                           Margin="0,0,0,15"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Placa Base:"
                               Style="{StaticResource ModernLabelStyle}"
                               Width="120"/>
                        <TextBlock Text="{Binding PCInfo.Motherboard, FallbackValue='No disponible'}"
                                 Foreground="#FFCBD5E0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Procesador:"
                               Style="{StaticResource ModernLabelStyle}"
                               Width="120"/>
                        <TextBlock Text="{Binding PCInfo.Processor, FallbackValue='No disponible'}"
                                 Foreground="#FFCBD5E0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Nombre PC:"
                               Style="{StaticResource ModernLabelStyle}"
                               Width="120"/>
                        <TextBlock Text="{Binding PCInfo.MachineName, FallbackValue='No disponible'}"
                                 Foreground="#FFCBD5E0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Sistema Operativo:"
                               Style="{StaticResource ModernLabelStyle}"
                               Width="120"/>
                        <TextBlock Text="{Binding PCInfo.OSVersion, FallbackValue='No disponible'}"
                                 Foreground="#FFCBD5E0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Tipo de Sistema:"
                               Style="{StaticResource ModernLabelStyle}"
                               Width="120"/>
                        <TextBlock Text="{Binding PCInfo.SystemType, FallbackValue='No disponible'}"
                                 Foreground="#FFCBD5E0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Fecha Registro:"
                               Style="{StaticResource ModernLabelStyle}"
                               Width="120"/>
                        <TextBlock Text="{Binding PCInfo.RegistrationDate, StringFormat='yyyy-MM-dd HH:mm:ss', FallbackValue='No disponible'}"
                                 Foreground="#FFCBD5E0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Estado y botones -->
            <Border Grid.Row="2"
                    Background="#FF2D3748"
                    BorderBrush="#FF4A5568"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,0,20"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding PCRegistrationStatus}"
                             Foreground="{Binding IsPCRegistered, Converter={StaticResource BoolToColorConverter}, ConverterParameter=success:error}"
                             FontSize="14"
                             FontWeight="Medium"
                             TextWrapping="Wrap"
                             Grid.Row="0"
                             Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Button Content="Registrar PC"
                                Style="{StaticResource ModernButtonStyle}"
                                Command="{Binding RegisterPCCommand}"
                                Width="150"
                                Margin="0,0,10,0"
                                IsEnabled="{Binding IsPCRegistered, Converter={StaticResource InverseBoolConverter}}"/>

                        <Button Content="Descargar Hash"
                                Style="{StaticResource ModernButtonStyle}"
                                Command="{Binding DownloadPCHashCommand}"
                                Width="150"
                                Background="#FF48BB78"
                                IsEnabled="{Binding IsPCRegistered}"/>
                    </StackPanel>

                    <TextBlock Text="Después de registrar su PC, haga clic en 'Descargar Hash' para guardar el archivo ZIP con su hash único en un lugar seguro."
                             Foreground="#FFCBD5E0"
                             FontSize="12"
                             TextWrapping="Wrap"
                             TextAlignment="Center"
                             Grid.Row="2"/>
                </Grid>
            </Border>

            <!-- Información adicional -->
            <Border Grid.Row="3"
                    Background="#FF1A202C"
                    BorderBrush="#FF4A5568"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <Label Content="¿Por qué registrar mi PC?"
                           Style="{StaticResource ModernLabelStyle}"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                    <TextBlock Text="El registro de PC es necesario para:"
                             Foreground="#FFCBD5E0"
                             FontSize="14"
                             Margin="0,0,0,10"/>

                    <BulletDecorator Margin="20,0,0,5">
                        <BulletDecorator.Bullet>
                            <Ellipse Fill="#FF63B3ED" Width="8" Height="8"/>
                        </BulletDecorator.Bullet>
                        <TextBlock Text="Generar un hash único basado en su hardware"
                                 Foreground="#FFCBD5E0"
                                 FontSize="13"/>
                    </BulletDecorator>

                    <BulletDecorator Margin="20,0,0,5">
                        <BulletDecorator.Bullet>
                            <Ellipse Fill="#FF63B3ED" Width="8" Height="8"/>
                        </BulletDecorator.Bullet>
                        <TextBlock Text="Verificar la identidad de su equipo"
                                 Foreground="#FFCBD5E0"
                                 FontSize="13"/>
                    </BulletDecorator>

                    <BulletDecorator Margin="20,0,0,5">
                        <BulletDecorator.Bullet>
                            <Ellipse Fill="#FF63B3ED" Width="8" Height="8"/>
                        </BulletDecorator.Bullet>
                        <TextBlock Text="Asegurar que solo usted pueda acceder a su cuenta"
                                 Foreground="#FFCBD5E0"
                                 FontSize="13"/>
                    </BulletDecorator>

                    <TextBlock Text="⚠️ IMPORTANTE: Guarde el archivo ZIP descargado en un lugar seguro. Lo necesitará para recuperar su cuenta en caso de problemas."
                             Foreground="#FFF6AD55"
                             FontSize="12"
                             FontWeight="Medium"
                             TextWrapping="Wrap"
                             Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
