<Window x:Class="WoldVirtual3DViewer.Views.GameOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WoldVirtual3D Overlay" 
        Background="{x:Null}" 
        AllowsTransparency="True" 
        WindowStyle="None"
        ShowInTaskbar="False" 
        Topmost="False"
        Focusable="False"
        IsHitTestVisible="True">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="BarButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Usamos un Grid transparente que deja pasar clics en las zonas vacías si Background=Null -->
    <Grid>
        <!-- Balance (Arriba Derecha) - Formato 3 decimales -->
        <Border HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,20,0" 
                Background="#99000000" CornerRadius="5" Padding="15,5" IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="$" Foreground="#00FF00" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding WCVcoinBalance, StringFormat='{}{0:N3}'}" 
                           Foreground="White" FontWeight="Bold"/>
                <TextBlock Text=" WCV" Foreground="#AAAAAA" Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Chat Flotante (Lista de mensajes temporales) -->
        <ItemsControl ItemsSource="{Binding ChatHistory}" 
                      HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                      Margin="20,0,0,80" Width="400" IsHitTestVisible="False">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#99000000" CornerRadius="5" Margin="0,2" Padding="8,4" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding FullText}" Foreground="{Binding Color}" TextWrapping="Wrap" FontSize="13"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel VerticalAlignment="Bottom"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <!-- Barra Inferior Estilo Second Life -->
        <Border VerticalAlignment="Bottom" Height="45" Background="#E6151515" BorderBrush="#333333" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Boton Chat -->
                    <ColumnDefinition Width="*"/>    <!-- Input Chat (Visible si activado) -->
                    <ColumnDefinition Width="Auto"/> <!-- Botones Menu -->
                    <ColumnDefinition Width="Auto"/> <!-- Derecha -->
                </Grid.ColumnDefinitions>

                <!-- Botón CHAT Principal -->
                <Button Grid.Column="0" Content="CHAT" Command="{Binding ToggleChatCommand}"
                        Style="{StaticResource BarButtonStyle}" Margin="10,5" FontWeight="Bold"/>

                <!-- Input Chat (Integrado en la barra) -->
                <Grid Grid.Column="1" Margin="5,5,20,5" 
                      Visibility="{Binding IsChatVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="ChatInputBox" Text="{Binding ChatMessage, UpdateSourceTrigger=PropertyChanged}" 
                             Background="#333333" Foreground="White" BorderThickness="0" Padding="5"
                             VerticalContentAlignment="Center" FontSize="13">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SendChatCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    
                    <Button Grid.Column="1" Content="Enviar" Command="{Binding SendChatCommand}" 
                            Background="#4A90E2" Foreground="White" Margin="5,0,0,0" Padding="10,2" BorderThickness="0"
                            Style="{StaticResource BarButtonStyle}"/>
                </Grid>

                <!-- Botones Centrales (Si el chat está oculto o hay espacio) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                    <Button Content="Hablar" Style="{StaticResource BarButtonStyle}"/>
                    <Button Content="Destinos" Style="{StaticResource BarButtonStyle}"/>
                    <Button Content="Gente" Style="{StaticResource BarButtonStyle}"/>
                    <Button Content="Perfil" Style="{StaticResource BarButtonStyle}"/>
                    <Button Content="Como" Style="{StaticResource BarButtonStyle}"/>
                </StackPanel>

                <!-- Botón Salir Derecha -->
                 <Button Grid.Column="3" Content="X" Command="{Binding GoBackCommand}" 
                        Style="{StaticResource BarButtonStyle}" Background="#33FF0000" Margin="10,5"/>
            </Grid>
        </Border>
    </Grid>
</Window>