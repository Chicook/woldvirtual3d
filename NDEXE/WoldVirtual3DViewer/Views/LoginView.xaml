<UserControl x:Class="WoldVirtual3DViewer.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border Background="#2C2C2C" CornerRadius="10" Width="350" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="INICIAR SESIÃ“N" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <TextBlock Text="Usuario" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalContentAlignment="Center" Background="#444" Foreground="White" BorderThickness="0" Padding="5,0"/>
                
                <TextBlock Text="Avatar" Foreground="#AAAAAA" Margin="0,15,0,5"/>
                <ComboBox SelectedItem="{Binding Avatar, Mode=TwoWay}" Height="30" Background="#444" Foreground="Black" BorderThickness="0">
                    <ComboBoxItem Content="chica"/>
                    <ComboBoxItem Content="chico"/>
                </ComboBox>
                
                <Button Content="ENTRAR" Command="{Binding EnterCommand}" Height="40" Margin="0,30,0,0" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
