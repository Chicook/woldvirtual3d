<UserControl x:Class="WoldVirtual3DViewer.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Contenido principal centrado -->
        <Border Grid.Row="0"
                Background="#FF1A202C"
                BorderBrush="#FF4A5568"
                BorderThickness="1"
                CornerRadius="8"
                Padding="40"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <Border Grid.Row="0"
                        Background="#FF63B3ED"
                        CornerRadius="50"
                        Width="100"
                        Height="100"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,30">
                    <TextBlock Text="WV3D"
                             FontSize="28"
                             FontWeight="Bold"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Border>

                <!-- Título -->
                <Label Content="Iniciar Sesión"
                       Style="{StaticResource TitleLabelStyle}"
                       Grid.Row="1"
                       Margin="0,0,0,30"/>

                <!-- Campo Usuario -->
                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <Label Content="Usuario:"
                           Style="{StaticResource ModernLabelStyle}"
                           Margin="0,0,0,8"/>
                    <TextBox Text="{Binding LoginUsername, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource ModernTextBoxStyle}"
                            Width="300"
                            FontSize="16"
                            Padding="12,8"/>
                </StackPanel>

                <!-- Campo Contraseña -->
                <StackPanel Grid.Row="3" Margin="0,0,0,20">
                    <Label Content="Contraseña:"
                           Style="{StaticResource ModernLabelStyle}"
                           Margin="0,0,0,8"/>
                    <PasswordBox x:Name="LoginPasswordBox"
                                Style="{StaticResource ModernPasswordBoxStyle}"
                                Width="300"
                                FontSize="16"
                                Padding="12,8"
                                PasswordChanged="LoginPasswordBox_PasswordChanged"/>
                </StackPanel>

                <!-- Estado del login -->
                <TextBlock Grid.Row="4"
                         Text="{Binding LoginStatus}"
                         Foreground="{Binding IsLoggedIn, Converter={StaticResource BoolToColorConverter}}"
                         FontSize="14"
                         FontWeight="Medium"
                         TextWrapping="Wrap"
                         TextAlignment="Center"
                         Margin="0,10,0,30"/>

                <!-- Botón de login -->
                <Button Grid.Row="5"
                        Content="Iniciar Sesión en WoldVirtual3D"
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding LoginCommand}"
                        Width="300"
                        Height="50"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#FF48BB78"
                        IsEnabled="{Binding IsLoggedIn, Converter={StaticResource InverseBoolConverter}}"/>
            </Grid>
        </Border>

        <!-- Información en la parte inferior -->
        <Border Grid.Row="1"
                Background="#FF2D3748"
                BorderBrush="#FF4A5568"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="Bienvenido a WoldVirtual3D"
                         Foreground="White"
                         FontSize="18"
                         FontWeight="Bold"
                         TextAlignment="Center"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Metaverso Descentralizado - Tecnología del Futuro"
                         Foreground="#FFCBD5E0"
                         FontSize="14"
                         TextAlignment="Center"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Para acceder necesitará haber registrado su PC y creado una cuenta de usuario previamente. Si es la primera vez que usa el visor, regrese a las pantallas anteriores para completar el proceso de registro."
                         Foreground="#FFCBD5E0"
                         FontSize="12"
                         TextWrapping="Wrap"
                         TextAlignment="Center"/>

                <TextBlock Text="Al iniciar sesión, se abrirá automáticamente Godot con la escena bspeincipal.tscn de su proyecto WoldVirtual3D."
                         Foreground="#FF63B3ED"
                         FontSize="12"
                         FontWeight="Medium"
                         TextWrapping="Wrap"
                         TextAlignment="Center"
                         Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
